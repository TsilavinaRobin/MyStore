@using MyStore.Models
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    MyStoreEntities4 db22 = new MyStoreEntities4();

    List<GENRE> PanLisL22 = new List<GENRE>();
    PanLisL22 = db22.GENRE.Where(x => x.IdPanier == ANDRANA.IDPANIER).ToList();
    double s = 0;
    double d = 0;
    int I = 0;
}

<div class="alert alert-success" style="width: 40%;margin-left: 30%;margin-top: 20px;">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Paiement</strong> 
</div>
<section class="cart bgwhite p-t-70 p-b-100">
    <div class="container">
        <div class="container-table-cart pos-relative">
            <div class="wrap-table-shopping-cart bgwhite">
                <table class="table-shopping-cart">

                    <tr class="table-head">
                        <th class="column-1"></th>@*image*@
                        <th class="column-2"> Article </th>
                        <th class="column-3"> Prix</th>
                        <th class="column-4"> Quantité</th>
                    </tr>
              @foreach (var h in PanLisL22)

                  {
                      double x = 0;

                      if (h.Prix == h.Prix1)
                      {
                          x = Convert.ToDouble(h.Prix) * Convert.ToDouble(h.NbrGenre);

                      }
                      else
                      {
                          x = Convert.ToDouble(h.Prix1) * Convert.ToDouble(h.NbrGenre);
                      }
                      s += x;
                      d = PanLisL22.Count();

                        <tr class="table-row">
                            <td class="column-1">
                                <div class="cart-img-product b-rad-4 o-f-hidden">
                                    @*<img src="images/item-10.jpg" alt="IMG-PRODUCT">*@
                                    <img src="@Url.Content(h.Image)" alt="IMG-PRODUCT">
                                </div>
                            </td>
                            <td class="column-2"> @h.NomGenre </td>
                            @if (h.Prix == h.Prix1)
                            {
                                <td class="column-3"> @x Ar </td>
                            }
                            else
                            {
                                <td class="column-3"> @x  Ar </td>
                            }
                            <td class="column-4"> @h.NbrGenre</td>
                          
                        </tr>

                    }
                </table>
            </div>
        </div>

        <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
            <h5 class="m-text20 p-b-24">
                Total
            </h5>
            <div class="flex-w flex-sb-m p-b-12">
                <span class="s-text18 w-size19 w-full-sm">
                    Nombres :
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @d
                </span>
            </div>

            <div class="flex-w flex-sb-m p-t-26 p-b-30">
                <span class="m-text22 w-size19 w-full-sm">
                    Total:
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @s Ar
                </span>
            </div>
            <div class="size15 trans-0-4">
                <!-- Button -->
                @*<img class="h-size2" src="~/Content/images/icons/paypal.png" alt="IMG-PAYPAL">
                <a href="@Url.Action("Valider","ACCUEIL",new  {@NbrProPanier= d,@PrixTotal=s})" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4"> Valider l'achat</a>
                @Html.ActionLink("Pay with Paypal Account", "PaymentWithPaypal", "Paypal")*@
                <a href='@Url.Action("PaymentWithPaypal", "Paypal")'>
                    <img src='@Url.Content("~/Content/images/icons/P1.png")' />
                </a>
            </div>
        </div>
    </div>
</section>


 
    
   