
@{
    ViewBag.Title = "Terminer";
    double s = 0;
    double d = 0;
    int I = 0;
}

@*<h2>Terminer</h2>
    <h2>@ViewBag.ParmD</h2>*@

<section class="cart bgwhite p-t-70 p-b-100">
    <div class="container">
        <div class="container-table-cart pos-relative">
            <div class="wrap-table-shopping-cart bgwhite">
                <table class="table-shopping-cart">

                    <tr class="table-head">
                        <th class="column-1"></th>@*image*@
                        <th class="column-2"> Article </th>
                        <th class="column-3"> Prix</th>
                        <th class="column-4"> Quantité</th>
                    </tr>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        double x = 0;

                        if (Model.Rows[i][4] == Model.Rows[i][14])
                        {
                            x = Model.Rows[i][4] * Model.Rows[i][20];
                        }
                        else
                        {
                            x = Model.Rows[i][14] * Model.Rows[i][20];
                        }
                        s += x;
                        d = Model.Rows.Count;

                        <tr class="table-row">
                            <td  class="column-1">
                                <div class="cart-img-product b-rad-4 o-f-hidden">
                                    @*<img src="images/item-10.jpg" alt="IMG-PRODUCT">*@
                                    <img src="@Url.Content(Model.Rows[i][2])" alt="IMG-PRODUCT">
                                </div> 
                            </td>
                            <td class="column-2"> @Model.Rows[i][1] </td>
                            @if (Model.Rows[i][4]== Model.Rows[i][14]) {
                            <td class="column-3"> @x Ar </td>
                            }
                            else
                            {
                                <td class="column-3"> @x  Ar </td>
                            }
                            <td class="column-4"> @Model.Rows[i][20]</td>
                            <td class="column-3"> <a href="@Url.Action("Delete","ACCUEIL",new  {@IdGenre= Model.Rows[i][0],@NbrGenre=Model.Rows[i][8],@NbrAch=Model.Rows[i][20] })" class="btn btn-danger">supprimer</a></td>


                        </tr>

                    }
                </table>
            </div>
        </div>
        <a href="@Url.Action("Index1","ACCUEIL",new  {@Continuer="true"})" class="btn btn-primary" style="margin-left: 74%;margin-top: 20px;">Continuer l'achat</a>
        <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
            <h5 class="m-text20 p-b-24">
                Total
            </h5>
            <div class="flex-w flex-sb-m p-b-12">
                <span class="s-text18 w-size19 w-full-sm">
                    Nombres :
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @d
                </span>
            </div>
           
            <div class="flex-w flex-sb-m p-t-26 p-b-30">
                <span class="m-text22 w-size19 w-full-sm">
                    Total:
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @s Ar
                </span>
            </div>
            <div class="size15 trans-0-4">
                <!-- Button -->
                <a href="@Url.Action("Valider","ACCUEIL",new  {@NbrProPanier= d,@PrixTotal=s})" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4"> Valider l'achat</a>

                @*<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                </button>*@
            </div>
        </div>
    </div>
</section>

